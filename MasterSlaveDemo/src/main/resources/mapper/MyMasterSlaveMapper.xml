<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ozz.split.mapper.MyMasterSlaveMapper">
  <update id="update">
    update city set name=name where id=-1
  </update>
  <select id="selectMaster" resultType="string">
    select name from city order by id limit #{limit}
  </select>
  <select id="selectSlave" resultType="string">
    SELECT user FROM `user` limit #{limit}
  </select>
</mapper>
