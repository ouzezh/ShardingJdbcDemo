<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="false" scanPeriod="1800 seconds" debug="false">
    <property name="log.pattern.console"
              value="%yellow(%d{yyyy-MM-dd HH:mm:ss}) %highlight(%-5level) %blue(%thread) %blue(%file:%line) %cyan(%logger{10}) - %green(%X{myMdc}) %msg%n"/>

    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${log.pattern.console}</pattern>
        </encoder>
    </appender>

    <root level="WARN">
        <appender-ref ref="console"/>
    </root>

    <logger name="com.ozz" level="INFO">
    </logger>

    <logger name="ShardingSphere-SQL" level="DEBUG">
    </logger>
    <logger name="ShardingSphere-metadata" level="DEBUG">
    </logger>

    <!-- HikariCP -->
    <logger name="com.zaxxer.hikari" level="DEBUG">
    </logger>
    <!-- p6sy -->
    <logger name="p6spy" level="INFO">
    </logger>

</configuration>
